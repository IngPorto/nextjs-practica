/deployService:
	description:
	post:
		description: |
		headers: 
		body:
			application/json:
				projectCode:
					description: Project ID
					required: true
					type: string
					example: "P-t8t"
				serviceCode:
					description: Service ID
					required: true
					type: string
					example: "F3WE"
				filename:
					description: User's file name
					required: true
					type: string
					example: "My_first_service.js"
				workspace:
					description: Blockly xml block code
					required: true
					type: string
